<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/select_bg"
    tools:context="com.example.food8.condi_android.SelectActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="30dp"
        android:orientation="vertical"
        android:id="@+id/linearLayout">

        <TextView
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:background="@drawable/talk"
            android:gravity="center"
            android:text="오늘 좋은 일이 있으셨나요??"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="16dp" />
        <RadioGroup
            android:id="@+id/answer_1"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="100dp"
            android:layout_height="wrap_content">
\

            <RadioButton
                android:id="@+id/radio1_yes"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:background="@drawable/yes_one"
                android:button="@null"
                android:layout_marginRight="10dp"
                android:textSize="16dp" />
            <RadioButton
                android:id="@+id/radio1_no"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:background="@drawable/no_one"
                android:button="@null"/>
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:visibility="invisible">

        <TextView
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:textSize="16dp"
            android:gravity="center"
            android:textAlignment="center"
            android:background="@drawable/talk"
            android:text="우울한 일이 있었나요?" />

        <RadioGroup
            android:id="@+id/answer_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="100dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio2_yes"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:background="@drawable/yes_one"
                android:layout_marginRight="10dp"
                android:button="@null"
                android:textSize="16dp"/>

            <RadioButton
                android:id="@+id/radio2_no"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:background="@drawable/no_one"
                android:button="@null"
                android:textSize="16dp" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:visibility="invisible">

        <TextView
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:textSize="16dp"
            android:gravity="center"
            android:textAlignment="center"
            android:background="@drawable/talk"
            android:text="당신을 화나게 한 일이 있었습니까?" />

        <RadioGroup
            android:id="@+id/answer_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="100dp"
            android:orientation="horizontal">


            <RadioButton
                android:id="@+id/radio3_yes"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:background="@drawable/yes_one"
                android:layout_marginRight="10dp"
                android:button="@null"
                android:textSize="16dp" />

            <RadioButton
                android:id="@+id/radio3_no"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:background="@drawable/no_one"
                android:button="@null"
                android:textSize="16dp"/>
        </RadioGroup>
    </LinearLayout>
</LinearLayout>
